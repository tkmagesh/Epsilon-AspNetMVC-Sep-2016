@model BugTracker.Controllers.Bug

   <div>

        @if (Model.IsClosed)
        {
            <span class="bugname closed">@Model.Name</span>
        }
        else
        {
            <span class="bugname">@Model.Name</span>
        }

        <div class="datetime">[CreatedAt]</div>

        @using (Ajax.BeginForm("toggle", new AjaxOptions
        {
            InsertionMode = InsertionMode.Replace,
            UpdateTargetId = "bug-" + Model.Id
        }))
        {

            <input type="hidden" value="@Model.Id" name="Id" />
            <input type="submit" value="Toggle" />

        }

   
</div> 
